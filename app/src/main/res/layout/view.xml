<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#113163">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#870830">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Name:"
            android:textColor="#fdf109"
            android:textSize="20dp"
            android:paddingLeft="20dp"

            android:layout_gravity="center"/>
        <TextView

            android:layout_width="250dp"
            android:layout_marginLeft="20dp"
            android:layout_height="43dp"
            android:text="Name"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/viewbackground"
            android:layout_gravity="center"
            android:id="@+id/viewname"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Address:"
            android:textColor="#fdf109"
            android:textSize="20dp"
            android:paddingLeft="20dp"

            android:layout_gravity="center"/>
        <TextView

            android:layout_width="250dp"
            android:layout_marginLeft="20dp"
            android:layout_height="43dp"
            android:text="Address"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/viewbackground"
            android:layout_gravity="center"
            android:id="@+id/viewaddress"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Phone:"
            android:textColor="#fdf109"
            android:textSize="20dp"
            android:paddingLeft="20dp"

            android:layout_gravity="center"/>
        <TextView

            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_height="43dp"
            android:text="Phone"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/viewbackground"
            android:layout_gravity="center"
            android:id="@+id/viewphone"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_marginLeft="-5dp"
            android:background="@drawable/viewbackground"
            android:drawableRight="@drawable/call"
            android:paddingRight="10dp"
            android:id="@+id/call"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Blood:"
            android:textColor="#fdf109"
            android:textSize="20dp"
            android:paddingLeft="20dp"

            android:layout_gravity="center"/>
        <TextView

            android:layout_width="250dp"
            android:layout_marginLeft="20dp"
            android:layout_height="43dp"
            android:text="Blood Group"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/viewbackground"
            android:layout_gravity="center"
            android:id="@+id/viewbloodgroup"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Copyright \u00A9 Subash Shrestha"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#ffffff"/>

</LinearLayout>